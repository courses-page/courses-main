<div class="container">
  <div class="row">
    <div class="col-12"> 
      <div class="d-flex justify-content-center">
        <form class="mt-4 form-styling" action="/updatePassword" method="POST">
            <div class="mt-2 p-3">
              <label for="password" class="form-label mb-3"><strong>New password:</strong></label>
              <input type="password" class="form-control{{#if errorMessage.password}} is-invalid {{/if}}" id="password" name="password" placeholder="Choose a password">
              {{#if errorMessage.password}}
                <div id="validationServerUsernameFeedback" class="invalid-feedback">
                  {{errorMessage.password.properties.message}}
                </div>
              {{/if}}
            </div>
            <div class="d-flex align-items-center justify-content-center">
              <button type="submit" class="btn button-blue mb-4">Update</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
