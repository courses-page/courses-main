
<div class="col-10 col-sm-6 col-xl-4 col-xxl-3 mb-3">
  <div class="card text-dark bg-light mt-3 h-100 card-styling">
      <a href="/courseDetail/{{this.id}}" style="text-decoration: none; color:black">
      <div class="card-header"><h5 class="card-title text-center">{{this.title}}</h5></div>
          <img src="{{this.imageUrl}}" class="card-img-top card-image-size" alt="...">
          <div class="card-body d-flex flex-column align-items-center">
              <ul class="no-style text-center ps-0 course-info">
                  <li><strong>Subject:</strong> {{this.subject}}</li>
                  <li><strong>Duration:</strong> {{this.duration}}</li>
                  <li><strong>Difficulty:</strong> {{this.difficulty}}</li>
              </ul>
              <div class="d-flex">
              <a href="/companyDetail/{{this.companyId.id}}"><button class="btn company-info-btn btn-secondary heading-font me-2 ms-2 ">{{this.companyId.companyName}}</button></a>
              <a href="/courseDetail/{{this.id}}"><button class="btn see-more btn-primary heading-font">See more</button></a>
              </div>
          </div>
    </a>
  </div>
</div>
