<h1 class="mt-4 header-preset text-center">Login</h1>
<div class="container">
  <div class="row">
    <div class="col-12"> 
      <div class="d-flex justify-content-center">
        <form class="mt-4 form-styling" action="/auth/loginUser" method="POST">
          <div class="mt-2 p-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control {{#if flashMessage}} is-invalid {{/if}}" id="email" name="email">
            {{#if flashMessage}}
              <div id="validationServerUsernameFeedback" class="invalid-feedback">
                {{flashMessage}}
              </div>
            {{/if}}
          </div>
          <div class="mb-1 ps-3 pe-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control {{#if flashMessage}} is-invalid {{/if}}" id="password" name="password">
            {{#if flashMessage}}
              <div id="validationServerUsernameFeedback" class="invalid-feedback">
                {{flashMessage}}
              </div>
            {{/if}}
          </div>
          <div class="d-flex flex-column align-items-center justify-content-center">
            <button type="submit" class="btn button-blue mt-2">Login!</button><br>
            <a href="/auth/google"><img src="/images/btn_google_signin_dark_normal_web.png" class="mb-4"></a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>