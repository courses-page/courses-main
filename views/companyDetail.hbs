<div class="row justify-content-center justify-content-sm-center mt-4">
    <div class="col-10 row justify-content-center justify-content-sm-start">
        <div class="card text-dark bg-light h-100 card-styling">
            <div class="card-header"><h2 class="card-title text-center"><strong>{{companyName}}</strong></h2>
                <div class="text-center container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-sm-6 col-md-4">
                            <img src="{{imageUrl}}" class="card-img-top img-responsive" alt="...">
                        </div>
                    </div>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <p class="text-center">{{description}}</p>
                    <h3 class="text-center">Contact: {{email}}</h3>
                </div>
            </div>
        </div>
    </div>
</div>